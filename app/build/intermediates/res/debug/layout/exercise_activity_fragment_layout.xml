<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/buttonTresc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/TRESCZADANIA"
        android:textColor="@color/lightBlueDajSpisac"
        android:background="@color/white"
        android:gravity="left|center_vertical"
        android:paddingLeft="15dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:minHeight="70dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:alpha="0.5"
        android:id="@+id/sepAfterTresc"
        android:visibility="gone"
        android:background="@color/darkGrey"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>

    <TextView
        android:id="@+id/textViewTresc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hello"
        android:visibility="gone"
        android:textColor="#19172c"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2.5dp"
        android:visibility="visible"
        android:alpha="0.5"
        android:background="@color/darkGrey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/buttonSolution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rozwiazanie"
            android:textColor="@color/lightBlueDajSpisac"
            android:background="#dbdbdb"
            android:gravity="left|center_vertical"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:minHeight="70dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/sepAfteSolution"
        android:visibility="gone"
        android:background="@color/darkGrey"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:alpha="0.5"/>


    <TextView
        android:id="@+id/textViewSolution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hello"
        android:visibility="gone"
        android:textColor="#19172c"
        android:background="#dbdbdb"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:alpha="0.5"
        android:visibility="visible"
        android:background="@color/darkGrey"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/home/olek/AndroidStudioProjects/DajSpisac2/DajSpisac/app/src/main/res/layout/exercise_activity_fragment_layout.xml -->