<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/tab_background_default_chosen"
    android:gravity="center_horizontal"
    android:longClickable="false"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/imageViewSubjectIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:src="@drawable/twojeksiazki_matematyka_blada" />

    <TextView
        android:id="@+id/textViewTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:lines="1"
        android:singleLine="true"
        android:text="@string/mathematics"
        android:textColor="@color/lightBlueDajSpisac"
        android:textStyle="bold" />

</LinearLayout><!-- From: file:/home/olek/AndroidStudioProjects/DajSpisac2/DajSpisac/app/src/main/res/layout/tab_mathematics_layout.xml -->