<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlueDajSpisac"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/wybierzszkole"
                    android:textColor="@color/lightBlueDajSpisac"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonSchoolPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_background_chooseclassdialog_left"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/podstawowka"
                        android:textColor="@color/lightBlueDajSpisac"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/buttonSchoolSecondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_background_chooseclassdialog_right"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="@string/gimnazjum"
                        android:textColor="@color/lightBlueDajSpisac"
                        android:textSize="15sp" />


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginTop="15dp"
                android:alpha="0.5"
                android:background="@color/lightBlueDajSpisac" />


            <!--WybÃ³r klasy -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/wybierzklase"
                    android:textColor="@color/lightBlueDajSpisac"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonKl1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_background_chooseclassdialog_left"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="1"
                        android:textColor="@color/lightBlueDajSpisac"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/buttonKl2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_background_chooseclass_dialog_middle"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="2"
                        android:textColor="@color/lightBlueDajSpisac"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/buttonKl3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_background_chooseclassdialog_right"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="3"
                        android:textColor="@color/lightBlueDajSpisac"
                        android:textSize="15sp" />


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginTop="15dp"
                android:alpha="0.5"
                android:background="@color/lightBlueDajSpisac" />

            <!-- Selekcje -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <Button
                    android:id="@+id/buttonAnuluj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_anuluj"
                    android:minHeight="60dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/anuluj"
                    android:textColor="@color/lightBlueDajSpisac"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonZmien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_zmien"
                    android:minHeight="60dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/zmien"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout><!-- From: file:/home/olek/AndroidStudioProjects/DajSpisac2/DajSpisac/app/src/main/res/layout/dialog_choose_class_layout.xml -->