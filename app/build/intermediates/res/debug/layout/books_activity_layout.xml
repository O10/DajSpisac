<TabHost
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment android:name="com.swmansion.dajspisac.settings.FragmentChooseClass"
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/choose_class_fragment_layout" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:alpha="0.8"
            android:id="@+id/separator"
            android:visibility="visible"
            android:background="@color/darkBlueDajSpisac"/>

        <TabWidget
            android:id="@android:id/tabs"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@color/lightBlueDajSpisac"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="3.5dp"
            android:alpha="0.8"
            android:id="@+id/separator2"
            android:visibility="visible"
            android:background="@color/darkBlueDajSpisac"/>

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />



    </LinearLayout>
</TabHost><!-- From: file:/home/olek/AndroidStudioProjects/DajSpisac2/DajSpisac/app/src/main/res/layout/books_activity_layout.xml -->