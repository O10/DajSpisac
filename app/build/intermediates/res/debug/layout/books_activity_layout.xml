<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/actionBar"
            layout="@layout/actionbar_layout_singlebook"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <fragment
            android:id="@+id/list"
            android:name="com.swmansion.dajspisac.settings.FragmentChooseClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/choose_class_fragment_layout" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false">

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="78dp"
                android:clipChildren="false">

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:clipChildren="false" />

            </FrameLayout>

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tab_widget_backgorund"
                android:clipChildren="false"
                android:orientation="horizontal"
                android:showDividers="none" />


        </RelativeLayout>


    </LinearLayout>
</TabHost><!-- From: file:/home/olek/AndroidStudioProjects/DajSpisac2/DajSpisac/app/src/main/res/layout/books_activity_layout.xml -->