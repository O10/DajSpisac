<TabHost
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/relativeContainer">
        <include layout="@layout/actionbar_layout_singlebook" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true"
            android:id="@+id/actionBar" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/numerzadania"
            android:textSize="15sp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:id="@+id/tVNrZad"
            android:background="@color/darkBlueDajSpisac"
            android:textColor="@color/lightBlueDajSpisac"
            android:gravity="center_horizontal"
            android:layout_below="@id/actionBar"/>


        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0" />

        <android.support.v4.view.ViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/viewPagerSingleExercise"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_below="@+id/frameCont"
            android:layout_marginTop="5dp"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkBlueDajSpisac"
            android:layout_below="@+id/tVNrZad"
            android:id="@+id/frameCont">
            <HorizontalScrollView
                android:scrollbars="none"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/horizontalscrollview"
                android:background="@color/darkBlueDajSpisac"
                android:layout_gravity="center_horizontal"
                android:fadingEdgeLength="0dp">
                <LinearLayout android:id="@+id/top_buttons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/darkBlueDajSpisac"
                        android:showDividers="none"
                        />
                </LinearLayout>
            </HorizontalScrollView>

        </FrameLayout>



    </RelativeLayout>
</TabHost>