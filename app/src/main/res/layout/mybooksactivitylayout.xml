<TabHost
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false">


        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:alpha="0.8"
            android:id="@+id/separator"
            android:visibility="visible"
            android:background="@color/darkBlueDajSpisac"/>

        <TabWidget
            android:id="@android:id/tabs"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@color/lightBlueDajSpisac"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="3.5dp"
            android:alpha="0.8"
            android:id="@+id/separator2"
            android:visibility="visible"
            android:background="@color/darkBlueDajSpisac"/>

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0"
            />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />

    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="@drawable/backgorund_footer_mybooks"
        android:alpha="0.7
        " android:layout_gravity="bottom" android:layout_marginBottom="0.5dp"
        android:layout_marginLeft="0.5dp" android:layout_marginRight="0.5dp"
        android:id="@+id/addBookLayout" android:visibility="visible">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/twojeksiazki_plus_bialy"
            android:layout_centerVertical="true"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dodajkolejnaksiazke"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp" />

    </RelativeLayout>
</TabHost>