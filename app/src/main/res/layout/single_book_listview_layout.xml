<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/booksLayoutSingleItem"
        style="@style/SingleItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingBottom="7dp"
        android:paddingTop="7dp">

        <ImageView
            android:id="@+id/iViewMin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tVtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|left"
                android:text="teshhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhss"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#19172c"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tVAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="sasasas"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/lightBlueDajSpisac"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white">

        <View
            android:id="@+id/gradientDivider"
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
            android:background="@drawable/gradientseperator" />

        <Button
            android:id="@+id/buttonAddDeleteBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:alpha="0.8"
            android:background="@drawable/twojeksiazki_plus_lightblue"
            android:minHeight="0dp"
            android:minWidth="60dp" />


    </LinearLayout>

</LinearLayout>