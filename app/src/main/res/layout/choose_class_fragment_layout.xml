<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkBlueDajSpisac"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/buttonSchoolPrimary"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_chooseclassdialog_left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/podstawowka"
            android:textColor="@color/lightBlueDajSpisac"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonSchoolSecondary"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_chooseclassdialog_right"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/gimnazjum"
            android:textColor="@color/lightBlueDajSpisac"
            android:textSize="15sp"
            android:textStyle="bold" />


    </LinearLayout>


    <!--WybÃ³r klasy -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/buttonKl1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_chooseclassdialog_left"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="1"
            android:textColor="@color/lightBlueDajSpisac"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonKl2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_chooseclass_dialog_middle"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="2"
            android:textColor="@color/lightBlueDajSpisac"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonKl3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_chooseclassdialog_right"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="3"
            android:textColor="@color/lightBlueDajSpisac"
            android:textSize="15sp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>