<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This is the line -->
    <item android:bottom="0dp" android:right="0dp" android:left="0dp" android:top="0dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <gradient
                android:startColor="@color/lightGrey"
                android:centerColor="@color/darkBlueDajSpisac"
                android:endColor="@color/darkBlueDajSpisac"
                android:angle="90"/>
            <corners android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"/>

        </shape>
    </item>
    <item android:bottom="1dp" android:right="1dp" android:left="1dp" android:top="0dp">
        <shape>
            <solid android:color="@color/darkBlueDajSpisac" />
            <!--<stroke android:width="1dp" android:color="@color/lightBlueDajSpisac" />-->

            <corners android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"/>
        </shape>
    </item>


</layer-list>

